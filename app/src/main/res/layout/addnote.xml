<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/hr"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="386dp"
        android:layout_alignParentTop="true"
        android:layout_weight="10"
        android:orientation="vertical" >

       <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <ImageView 
                android:id="@+id/imtitle"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/imtitle"/>
            <TextView
                android:id="@+id/title1"
                android:layout_toRightOf="@+id/imtitle"
                android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:textSize="42px"
                 android:layout_alignBottom="@+id/imtitle"
                 
                 android:text="标题"/>
       </RelativeLayout>

       

        <EditText
            android:layout_marginTop="20px"
            android:id="@+id/title"
            android:hint="请输入简短标题。。。"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
       <RelativeLayout 
           android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <ImageView 
                android:id="@+id/imcontent"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/imcontent"/>
        <TextView
            android:id="@+id/content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容"
            android:layout_toRightOf="@+id/imcontent"
            android:textSize="42px"
             android:layout_alignBottom="@+id/imcontent"
            />
        </RelativeLayout>

        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:layout_weight="0.15"
            android:gravity="top"
            android:hint="请输入。。。"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_background2" />

        <ImageView
            android:id="@+id/pic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.02" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/noteicon"
            android:background="#0000"
            android:layout_marginLeft="20dp"
           
             />

        <ImageButton
            android:id="@+id/camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            
            android:background="#0000"
            android:src="@drawable/xiangji"
            android:layout_marginLeft="20dp"
            />

</LinearLayout>

</LinearLayout>