<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:id="@+id/tabhost"
    tools:context=".MainActivity" >

   <LinearLayout 
       android:orientation="vertical" 
       android:layout_width="fill_parent" 
       android:layout_height="fill_parent">  
            <!-- TabWidget的id属性必须为 @android:id/tabs-->

       <TabWidget
           android:id="@android:id/tabs"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal" 
           android:background="#feeeed">
       </TabWidget>
  
            <!-- FrameLayout的id属性必须为 @android:id/tabcontent-->
           <FrameLayout 
                 android:id="@android:id/tabcontent" 
                 android:layout_width="fill_parent" 
                 android:layout_height="fill_parent">  
                     <ScrollView 
                     android:id="@+id/view1"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_gravity="center_vertical"
                     android:background="#feeeed">
                     
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:orientation="vertical"
                         tools:context=".MainActivity" >
                         <LinearLayout
                             android:layout_width="match_parent"
    	                     android:layout_height="wrap_content" 
    	                     android:orientation="horizontal"
    	                     android:gravity="center_vertical">
    	                     <TextView
                                 android:id="@+id/config_hidden"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:focusable="true"
                                 android:focusableInTouchMode="true"/>
     
                         <EditText
                        android:id="@+id/select1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:ems="11"
                        >
                        
                        </EditText>

                     <Button
                         android:id="@+id/startselect"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginTop="10dp"
                         android:textColor="#f2eada"
                         android:background="@drawable/bg_background"
                         android:text="查询" />
                     
                         </LinearLayout>
                        <TableLayout
                            android:id="@+id/TableLayout01"
                             android:layout_width="match_parent"
    	                     android:layout_height="wrap_content" 
    	                     android:orientation="horizontal"
    	                     android:stretchColumns="0,1,2">
                     <TableRow>
                     <Button
                          android:id="@+id/button1"
                          android:layout_width="90dp"
                          android:layout_height="70dp"
                         android:layout_marginTop="30dp"
                          android:text="求导法则" 
                          android:background="#ffaaaa"/>
                          
                     <Button
                          android:id="@+id/button2"
                          android:layout_width="90dp"
                          android:layout_height="70dp"
                          android:layout_marginTop="30dp"
                          android:text="基本积分表" 
                          android:background="#ffd4aa"/>
                     <Button
                          android:id="@+id/button3"
                          android:layout_width="90dp"
                          android:layout_height="70dp"
                          android:layout_marginTop="30dp"
                          android:text="矩阵运算"
                          android:background="#ffffaa"/> 
                         </TableRow>
                         </TableLayout>
                         
                        <TableLayout
                            android:id="@+id/TableLayout02"
                             android:layout_width="match_parent"
    	                     android:layout_height="wrap_content" 
    	                     android:orientation="horizontal"
    	                     android:stretchColumns="0,1,2">
                     <TableRow>
                     <Button
                          android:id="@+id/button4"
                          android:layout_width="90dp"
                          android:layout_height="70dp"
                          android:layout_marginTop="30dp"
                          
                          
                          android:text="泰勒公式" 
                          android:background="#d4ffaa"/>

                     <Button
                         android:id="@+id/button5"
                         android:layout_width="90dp"
                         android:layout_height="70dp"
                         android:layout_marginTop="30dp"
                         android:background="#aaffaa"
                         android:text="柯西中值" />
 
                     <Button
                          android:id="@+id/button6"
                          android:layout_width="90dp"
                          android:layout_height="70dp"
                          android:layout_marginTop="30dp"
                         
                          android:text="傅里叶级数" 
                          android:background="#aaffd4"/>
                        </TableRow>
                        </TableLayout>
                        <TableLayout
                            android:id="@+id/TableLayout03"
                             android:layout_width="match_parent"
    	                     android:layout_height="wrap_content" 
    	                     android:orientation="horizontal"
    	                     android:stretchColumns="0,1,2">
                     <TableRow>
                     <Button
                          android:id="@+id/button7"
                          android:layout_width="90dp"
                          android:layout_height="70dp"
                          android:layout_marginTop="30dp"
                          
                          
                          android:text="泊松分布" 
                          android:background="#d4aaff"/>
                          
                     <Button
                          android:id="@+id/button8"
                          android:layout_width="90dp"
                          android:layout_height="70dp"
                          android:layout_marginTop="30dp"
                         
                          
                          android:text="微分运算"
                          
                          android:background="#aad4ff"/> 
                     <Button
                          android:id="@+id/button9"
                          android:layout_width="90dp"
                          android:layout_height="70dp"
                          android:layout_marginTop="30dp"
                         
                          android:text="莱布尼茨" 
                          android:background="#aaaaff"/>
                       </TableRow>
                       </TableLayout>
                         
                         </LinearLayout>
                         </ScrollView>
                     
                
  
                 
                <ScrollView 
                     android:id="@+id/view2"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:background="#afdfe4">
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:orientation="vertical"
                         tools:context=".MainActivity" >
                         <LinearLayout
                             android:layout_width="match_parent"
    	                     android:layout_height="wrap_content" 
    	                     android:orientation="horizontal"
    	                     android:gravity="center_vertical">
    	                     <ImageView 
    	                         android:src="@drawable/fen"
    	                         android:paddingLeft="10dp"
    	                         android:layout_width="54dp"
    		                     android:layout_height="54dp"/>
    	                     <TextView
    	                         android:id="@+id/textview_main1"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:textSize="30sp"
                                 android:paddingLeft="10dp"
                                 android:layout_gravity="center"
                                 android:text="分类模拟题" />
                         </LinearLayout>
                         <LinearLayout
                             android:layout_width="match_parent"
    	                     android:layout_height="wrap_content" 
    	                     android:orientation="horizontal"
    	                     android:gravity="center_vertical">
    	                     <ImageView 
    	                         android:src="@drawable/li"
    	                        android:paddingLeft="10dp"
                                 android:layout_width="54dp"
    	                         android:layout_height="54dp"/>  
        
                            <TextView
                                android:id="@+id/textview_main2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="30sp"
                               android:paddingLeft="10dp"
                                android:layout_gravity="center"
                                android:text="历年考研真题" />
                         </LinearLayout>
                         <LinearLayout
                             android:layout_width="match_parent"
    	                     android:layout_height="wrap_content" 
    	                     android:orientation="horizontal"
    	                     android:gravity="center_vertical">
    	                     <ImageView 
    	                         android:src="@drawable/da"
    	                         android:paddingLeft="10dp"
                                 android:layout_width="54dp"
    	                         android:layout_height="54dp"/>  
        
                            <TextView
                                android:id="@+id/textview_main3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="30sp"
                                android:paddingLeft="10dp"
                                android:layout_gravity="center"
                                android:text="答题闯关" />
                         </LinearLayout>
                         <LinearLayout
                             android:layout_width="match_parent"
    	                     android:layout_height="wrap_content" 
    	                     android:orientation="horizontal"
    	                     android:gravity="center_vertical">
    	                     <ImageView 
    	                         android:src="@drawable/kao"
    	                         android:paddingLeft="10dp"
                                 android:layout_width="54dp"
    	                         android:layout_height="54dp"/>  
        
                            <TextView
                                android:id="@+id/textview_main4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="30sp"
                                android:paddingLeft="10dp"
                                android:layout_gravity="center"
                                android:text="考研预测 " />
                         </LinearLayout>
                         </LinearLayout>
                         </ScrollView>
                <ScrollView 
                     android:id="@+id/view3"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:background="#f8aba6">
                    
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                     >
                         <RelativeLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/imageView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:layout_alignBottom="@+id/text7"
                                android:src="@drawable/calculator" />
                             <TextView
                                 android:id="@+id/text7"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_toRightOf="@+id/imageView7"
                                 android:paddingLeft="10dp"
                                 android:text="数学计算"
                                 android:textSize="30sp" />
                          </RelativeLayout>
                          <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" >
                             <ImageView
                                  android:id="@+id/imageView8"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:paddingLeft="10dp"
                                  android:layout_alignBottom="@+id/text8"
                                  android:src="@drawable/mathnote" />
                              <TextView
                                  android:id="@+id/text8"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_toRightOf="@+id/imageView8"
                                  android:paddingLeft="10dp"
                                  android:textSize="30sp"
                                  android:text="数学笔记" />
                           </RelativeLayout>
                           <RelativeLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content" >
                               <ImageView
                                    android:id="@+id/imageView9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:layout_alignBottom="@+id/text9"
                                    android:src="@drawable/plan" />
                               <TextView
                                    android:id="@+id/text9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:layout_toRightOf="@+id/imageView9"
                                    android:textSize="30sp"
                                    android:text="数学小游戏" />
                            </RelativeLayout>
                          
                           
                             
                            
                    </LinearLayout>
                    </ScrollView>>
                
                
                <ScrollView 
                     android:id="@+id/view4"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:background="#fedcbd">
                    
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                     >
                         <RelativeLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:layout_alignBottom="@+id/text1"
                                android:src="@drawable/information1" />
                             <TextView
                                 android:id="@+id/text1"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_toRightOf="@+id/imageView1"
                                 android:paddingLeft="10dp"
                                 android:text="个人资料"
                                 android:textSize="30sp" />
                          </RelativeLayout>
                          <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content" >
                             <ImageView
                                  android:id="@+id/imageView2"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:paddingLeft="10dp"
                                  android:layout_alignBottom="@+id/text2"
                                  android:src="@drawable/collect1" />
                              <TextView
                                  android:id="@+id/text2"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_toRightOf="@+id/imageView2"
                                  android:paddingLeft="10dp"
                                  android:textSize="30sp"
                                  android:text="我的收藏" />
                           </RelativeLayout>
                           
                          
                           
                             <RelativeLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content" >
                               <ImageView
                                    android:id="@+id/imageView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:layout_alignBottom="@+id/text4"
                                    android:src="@drawable/feedback1" />
                               <TextView
                                    android:id="@+id/text4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:layout_toRightOf="@+id/imageView4"
                                    android:textSize="30sp"
                                    android:text="反馈与意见" />
                            </RelativeLayout>
                            <RelativeLayout
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content" >
                               <ImageView
                                    android:id="@+id/imageView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:layout_alignBottom="@+id/text5"
                                    android:src="@drawable/about1" />
                               <TextView
                                    android:id="@+id/text5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="10dp"
                                    android:layout_toRightOf="@+id/imageView5"
                                    android:textSize="30sp"
                                    android:text="关于" />
                            </RelativeLayout>
                            
                    </LinearLayout>
                    </ScrollView>>

 
             </FrameLayout>  
         </LinearLayout>

</TabHost>
